extends layout

include mixins/cards/storeCard
include mixins/pagination

block content
  .inner
    .stores
      each store in stores
        if user && user.level === 20
          +storeCard(store)
        else if !user || user.level === 10
          if store.tags.includes('Approved')
            +storeCard(store)
    +pagination(page, pages)
