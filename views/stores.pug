extends layout

include mixins/storeCard
include mixins/pagination

block content
  .inner
    h2= title
    .stores
      each store in stores
        if user && user.level > 10
          +storeCard(store)
        else if !user || user.level === 10
          if store.approved === true
            +storeCard(store)
    +pagination(page, pages, count)
