mixin storeForm(store = {})
  form.card(action=`/add/${store._id || ''}` method='POST')
    label(for='name') Name
    input(type='text' name='name' value=store.name)
    label(for='description') Description
    textarea(name='description')= store.description
    - const choices = ['Short Story', 'Poetry', 'Prose', 'Non Fiction']
    - const tags = store.tags || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type='checkbox' id=choice value=choice name='tags' 
            checked=(tags.includes(choice))
          )
          label(for=choice) #{choice}
    if user.level > 10
      label(for='approved') Check box to approve post
      input(class='approved' type='checkbox' name='approved' value=store.approved)
    input(type='submit' value='Save' class='button')
