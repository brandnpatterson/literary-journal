mixin pagination(page, pages, count)
  .pagination
    .pagination-prev
      if page > 1
        a(href=`/posts/page/${page - 1}`) Prev
    .pagination-text
      p Page #{page} of #{pages} - #{count} total results
    .pagination-next  
      if page < pages
        a(href=`/posts/page/${parseFloat(page) + 1}`) Next
