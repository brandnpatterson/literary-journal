extends layout

block content
  .inner
    .single
      .single__hero
        h2.title.title--single
          a(href=`/stores/${store.slug}`) #{store.name}
    .single__details.inner
      p= store.description

    if store.tags
      ul.tags
        each tag in store.tags
          if tag != 'Approved'
            li.tag
              a.tag__link(href=`/tags/${tag}`)
                span.tag__text #{tag}
